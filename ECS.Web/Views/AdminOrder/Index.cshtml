@model List<ECS.Application.DTOs.Orders.OrderDto>
@{
    ViewData["Title"] = "Orders";
}

<div class="row mb-3">
    <div class="col-12">
        <h2><i class="fas fa-receipt"></i> All Orders</h2>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table id="ordersTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.CustomerName</td>
                        <td>$@order.TotalAmount.ToString("N2")</td>
                        <td>
                            <select class="form-select form-select-sm status-select" data-order-id="@order.OrderId">
                                <option value="0" selected="@(order.Status == "Pending")">Pending</option>
                                <option value="1" selected="@(order.Status == "Processing")">Processing</option>
                                <option value="2" selected="@(order.Status == "Shipped")">Shipped</option>
                                <option value="3" selected="@(order.Status == "Delivered")">Delivered</option>
                                <option value="4" selected="@(order.Status == "Cancelled")">Cancelled</option>
                            </select>
                        </td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                order: [[4, 'desc']]
            });

            $('.status-select').on('change', function() {
                var orderId = $(this).data('order-id');
                var status = $(this).val();

                if (confirm('Update order status?')) {
                    $.ajax({
                        url: '/AdminOrder/UpdateStatus',
                        type: 'POST',
                        data: { id: orderId, status: status },
                        success: function(result) {
                            if (result.success) {
                                location.reload();
                            } else {
                                alert(result.message);
                            }
                        }
                    });
                } else {
                    location.reload();
                }
            });
        });
    </script>
}